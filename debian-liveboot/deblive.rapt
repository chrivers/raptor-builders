FROM liveboot-base

COPY deblive/layerinfo.zsh /root/layerinfo.zsh
COPY deblive/squashfs.zsh /root/squashfs.zsh
COPY deblive/common.zsh /root/common.zsh
COPY deblive/grub.zsh /root/grub.zsh
COPY deblive/generate.sh /root/generate.sh

MOUNT --simple cache  /cache
MOUNT --layers input  /input
MOUNT --file   output /output/debian-liveboot.iso

ENTRYPOINT /bin/zsh
CMD /root/generate.sh
