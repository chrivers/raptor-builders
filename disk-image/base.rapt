FROM docker://debian:trixie

RUN apt-get update
RUN apt-get install -y --no-install-recommends \
    dosfstools            \
    grub-common           \
    grub-efi-amd64-bin    \
    grub-efi-amd64-signed \
    grub-pc-bin           \
    guestfish             \
    jq                    \
    linux-image-amd64     \
    mtools                \
    squashfs-tools        \
    xorriso               \
    zsh
RUN apt-get clean

RUN mkdir -p /input /output/
